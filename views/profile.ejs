<%- include('./partials/profile_header.ejs') %>
<div class="home-container w-full min-h-screen bg-zinc-1000 font-semibold text-white">
    <div class="navbar">
        <div class="logo px-10 py-10 text-5xl absolute top-0 left-0"><i class="fa-solid fa-blog"></i></div>
        <div class=" text-xl flex items-center justify-center gap-40 absolute inset-x-0 top-12 ">
        <a class="inline" href="/feed"><i class="fa-solid fa-house"></i>&nbsp;&nbsp;Home</a>
        <a class="inline-block" href="/search"><i class="fa-solid fa-magnifying-glass"></i>&nbsp;&nbsp;Search</a>
        <a class="inline-block" href="/upload"><i class="fa-solid fa-plus"></i>&nbsp;&nbsp;Create </a>
        </div>
        <a class="username px-10 py-10 text-xl absolute top-1.5 right-0" href="/profile"><%=user.username%>
        </a>    
    </div>
   

    <header>

        <div class="container">
    
            <div class="profile">
    
                <div class="profile-image">
    
                    <img class="w-full h-full bg-sky-100 " src="/images/uploads/<%=user.profileImage  %>" alt="">
    
                </div>
    
                <div class="profile-user-settings">
    
                    <h1 class="profile-user-name"><%= user.username %></h1>
    
                    <a class=" btn profile-edit-btn" href="/edit">Edit Profile</a>
    
                    <a class=" btn profile-edit-btn" href="/logout">Logout</a>
    
                </div>
                <div class="profile-bio">
                    <span class="profile-real-name "><%= user.name %></span> 
                    <p><%= user.bio %></p>
                </div>
    
            </div>
            <!-- End of profile section -->
    
        </div>
        <!-- End of container -->
    
    </header>

    
    <section class="post-list">
      <%user.posts.forEach(function(post){%>
        <span class="post">
          <figure class="post-image">
            <img class="w-[300px] h-[300px] " src="/images/uploads/<%= post.picture %>" alt="">
          </figure>
          <form method="POST" action="/posts/<%= post._id %>">
            <span class="text-lg"><%= post.likes.length %></span><i class="fa-solid fa-heart text-red-600 mx-2 mt-3 mr-20"></i>
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn profile-edit-btn ml-20">Delete</button>
        </form>
        
        </span>
        <% }) %>
      </section>
</div>



<%- include('./partials/footer.ejs') %>