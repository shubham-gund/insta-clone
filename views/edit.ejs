<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-zinc-950 text-white py-5">
    <div class="flex justify-between items-center px-4 py-2">
        <a class="text-xl text-blue-500 ml-4" href="/profile"><i class="fa-solid fa-arrow-left-long"></i>&nbsp;&nbsp; Profile</a>
        <h2 class="leading-none text-4xl">Edit Profile</h2>
        <a class="text-xl mr-8 " href="/feed"><i class="fa-solid fa-house"></i>&nbsp;&nbsp;Home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
        <div class="image w-20 h-20 bg-sky-100 rounded-full"></div>
        <button id="edit-btn" class="text-blue-500 capitalze">Edit Picture</button>
    </div>
    <div class="gap-5 px-5 mt-10 ">
        <h3 class="text-3xl leading-none ml-6 flex justify-center">Edit Account Details</h3>
        <hr class="opacity-30 my-3">
        <form class="w-full" action="/update" method="post" enctype="multipart/form-data">

            <div class="caption flex flex-col items-center">
                <br>
                <input class="ml-5" type="file" name="image" hidden id="imageinput">
                <br>
                <div class="flex justify-center items-center">
                    <label class="ml-6 text-2xl" for="name"> Name : &nbsp;&nbsp;</label>
                    <input class="px-3 py-3 mt-2 border-2 border-zinc-800 rounded-md bg-zinc-900" type="text" name="name" value="<%= user.name %>">
                </div>
                <br>
                <div class="flex justify-center items-center">
                    <label class="ml-6 text-2xl" for="bio"> Bio :  &nbsp;&nbsp;</label>
                    <textarea class="caption border-2 rounded-md border-zinc-800 " name="bio" id="" cols="30" rows="2"><%= user.bio %></textarea>
                </div>
                <br><br>
                <input class="text-lg border-2 px-2" type="submit" value="Update Details">
            </div>
        </form>
        
    </div>
</div>
<script>
    document.querySelector("#edit-btn").addEventListener("click",function(){
        document.querySelector("#imageinput").click();
    });
</script>
<%- include('./partials/footer.ejs') %>
